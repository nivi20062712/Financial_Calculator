#include<stdio.h>
#include<conio.h>
#include<math.h>
int main()
{
float inc,exp,sav;
float mf,gd,eq,ut;
int years;
float vmf,vgd,veq,vut,vtotal;
clrscr();
printf("=====FINANCIAL PLAN CALCULATOR=====\n");
printf("INCOME: ");
scanf("%f",&inc);
if(inc<=0)
{
printf("Enter your Correct Income");
